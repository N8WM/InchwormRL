<!--An inchworm xml environment in MuJoCo-->

<mujoco model="2d_inchworm">
  <option integrator="RK4" timestep="0.01"/>

  <!-- Commented out assets are most likely not needed? -->
  <asset>
    <texture builtin="gradient" height="100" rgb1="1 1 1" rgb2="0 0 0" type="skybox" width="100"/>
<!--    <texture builtin="flat" height="1278" mark="cross" markrgb="1 1 1" name="texgeom" random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>-->
    <texture builtin="checker" height="100" name="texplane" rgb1="0 0 0" rgb2="0.8 0.8 0.8" type="2d" width="100"/>
    <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="60 60" texture="texplane"/>
<!--    <material name="geom" texture="texgeom" texuniform="true"/>-->
  </asset>

  <!-- The physical environment -->
  <worldbody>
    <!-- Light source -->
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>

    <!-- Ground -->
    <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="40 40 40" type="plane"/>

    <!-- Segment 1: Left Foot -->
    <body name="left_foot" pos="-3 0 1">
      <geom type="box" size="1 0.2 0.2" rgba="0.8 0 0 1"/>
<!--      <joint armature="0" damping="0" limited="false" margin="0.01" name="root" pos="0 0 0" type="free"/>-->
      <joint name="hc_joint" type="hinge" pos="3 0 0" axis="0 1 0"/>
      <joint name="hsx_joint" type="slide" pos="3 0 0" axis="1 0 0"/>
      <joint name="hsy_joint" type="slide" pos="3 0 0" axis="0 0 1"/>

      <!-- Segment 2: Left Middle -->
      <body name="left_middle" pos="2 0 0">
        <geom type="box" size="1 0.2 0.2" rgba="0 0.8 0 1"/>
        <joint name="left_joint" type="hinge" pos="-1 0 0" axis="0 1 0"/>

        <!-- Segment 3: Right Middle -->
        <body name="right_middle" pos="2 0 0">
          <geom type="box" size="1 0.2 0.2" rgba="0 0 0.8 1"/>
          <joint name="middle_joint" type="hinge" pos="-1 0 0" axis="0 1 0"/>

          <!-- Segment 4: Right Foot -->
          <body name="right_foot" pos="2 0 0">
            <geom type="box" size="1 0.2 0.2" rgba="0.8 0.8 0 1"/>
            <joint name="right_joint" type="hinge" pos="-1 0 0" axis="0 1 0"/>
          </body>

        </body>
      </body>
    </body>
  </worldbody>
</mujoco>
